{
    "compilerOptions": {
        "noImplicitAny": true,
        "skipDefaultLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "incremental": false,
        "allowUnusedLabels": false,
        "skipLibCheck": true,
        "newLine": "LF",
        "alwaysStrict": true,
        "declarationMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "jsx": "react",
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "inlineSources": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noEmitOnError": false,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2019",
        "lib": ["dom", "esnext.array", "es2019"],
        "outDir": "dist"
    },
    "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"]
}
