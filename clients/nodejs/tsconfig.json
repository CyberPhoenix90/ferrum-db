{
    "compilerOptions": {
        "noImplicitAny": true,
        "skipDefaultLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "incremental": false,
        "allowUnusedLabels": false,
        "skipLibCheck": true,
        "newLine": "LF",
        "alwaysStrict": true,
        "declarationMap": true,
        "declaration": true,
        "moduleResolution": "Node",
        "module": "CommonJS",
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noEmitOnError": false,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2022",
        "outDir": "dist"
    },
    "include": ["src/**/*.d.ts", "src/**/*.mts", "src/util.ts", "src/connection/ferrum_database_remote.ts", "src/connection/client.ts", "src/index.ts"]
}
