{
    "name": "shared",
    "version": "1.0.0",
    "type": "module",
    "main": "dist/index.mjs",
    "compiler": "typescript",
    "generateIndexFile": "./src/index.mts",
    "defaultBuildSettings": {
        "assembly": "library",
        "includes": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx"],
        "jsxFragmentFactory": "Aurum.fragment",
        "jsxFactory": "Aurum.factory",
        "jsx": "react"
    },
    "builds": [
        {
            "includes": ["src/**/*.mts", "src/**/*.ts", "src/**/*.tsx"],
            "outdir": "dist",
            "name": "esnext",
            "platform": "isomorphic"
        }
    ]
}
