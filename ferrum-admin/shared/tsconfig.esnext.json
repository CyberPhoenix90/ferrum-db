{
  "compilerOptions": {
    "module": "Node16",
    "target": "es2022",
    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "jsx": "react",
    "jsxFactory": "Aurum.factory",
    "jsxFragmentFactory": "Aurum.fragment",
    "moduleResolution": "Node16",
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "noEmitOnError": true,
    "newLine": "LF",
    "declarationMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.mts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}