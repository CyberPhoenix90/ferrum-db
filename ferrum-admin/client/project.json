{
    "name": "ferrum-admin-client",
    "version": "1.0.0",
    "group": "ferrum-admin",
    "main": "dist/index.mjs",
    "compiler": "typescript",
    "scripts": {
        "start": "vite --host"
    },
    "hooks": {
        "postBuild": "cp ./index.html ./dist/index.html"
    },
    "dependencies": {
        "aurum-components": "^0.3.21",
        "aurumjs": "^0.9.46",
        "monaco-editor": "^0.49.0"
    },
    "devDependencies": {
        "vite": "^5.0.7"
    },
    "projectReferences": ["ferrum-query-api", "shared"],
    "defaultBuildSettings": {
        "assembly": "executable",
        "includes": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx"],
        "jsxFragmentFactory": "Aurum.fragment",
        "jsxFactory": "Aurum.factory",
        "jsx": "react"
    },
    "builds": [
        {
            "includes": ["src/**/*.ts", "src/**/*.tsx"],
            "outdir": "dist",
            "name": "esnext",
            "platform": "node"
        }
    ]
}
